<!DOCTYPE html>
<html lang="es">

<%- include('partialsDashboard/header') %>


    <!-- row section -->
    <div class="u-section-row padding-tb">

            <h2 class="das-titulo">Productos</h2>

            <!-- Body Dashboard -->
            <div class="das-body">

                <div class="productDetail">


                    <!-- HACER EL FOREACH -->
                    <% products.forEach(product => { %>
                        <article class="productos">
                            <img class="img-product" src="/images/product/<%= product.image %>"
                                alt="Imagen remera">
                            <div class="div-productos">

                                <h4 class="nombre"><%= product.name %></h4>

                                <p class="descuento"><s><%= product.discount %></s> <strong>$<%= product.price %></strong></p>

                                <form class="botones" action="" method="">
                                    <a target="_blank" href="/dashboard/productDetail/<%= product.id %>" class="submit"><span class="fas fa-eye"></span></a>

                                    <a href="<%= product.id %>/editProduct" class="submit"><span class="fas fa-pencil-alt"></span> </a>
                                    
                                    <button type="" href="#" class="rest"><span class="far fa-trash-alt"></span></button> 
                                </form>
                                    

                            </div>     
                    </article>
                    <% }) %>
                    <!-- HACER EL FOREACH -->

                </div>
            </div>
            <!-- Fin Body Dashboard -->

    </div>
    <!-- Fin row section -->

    <!-- Copyright -->
    <%- include('partialsDashboard/footer') %>
