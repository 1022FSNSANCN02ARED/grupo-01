    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>

<body class="dashboard">

    <div class="a-panel-menu">
        <!-- Logo -->
        <a href="/">
            <img width="100%" src="/images/logo.png">
        </a>

        <!-- Menu Admin -->
        <nav class="menu-admin">
            <li><a href="/dashboard"> <i class="fas fa-home"></i> <span>Dashboard</span></a></li>
            <li><a href="/product"> <i class="fas fa-store"></i> <span>Productos</span></a></li>
            <li><a href="#"> <i class="fas fa-shopping-cart"></i> <span>Pedidos</span></a></li>
            <li><a href="#"> <i class="fas fa-users"></i> <span>Clientes</span></a></li>
            <li><a href="#"> <i class="fas fa-store"></i> <span>Paginas</span> </a></li>
            <li><a target="_blank" href="/"> <i class="fas fa-sign-out-alt"></i> <span>Ver Tienda</span></a></li>
            <li><a href="#"> <i class="fas fa-sign-out-alt"></i> <span>Cerrar Sesión</span></a></li>
        </nav>

    </div>


    <div class="a-panel-dashboard">

        <!-- row section -->
        <div class=" u-section-row padding-tb">

            <h2 class="das-titulo">Productos</h2>

            <div class="das-body">

                <div class="tabset">
                
                    <!-- Tab 1 Productos -->
                    <input type="radio" name="tabset" id="tab1" aria-controls="marzen" checked>
                    <label for="tab1">Productos</label>

                    <!-- Tab 2 Añadir Nuevo-->
                    <input type="radio" name="tabset" id="tab2" aria-controls="rauchbier">
                    <label for="tab2">Añadir Nuevo</label>

                    <!-- Tab 3 Añadir Nuevo-->
                    <input type="radio" name="tabset" id="tab3" aria-controls="papelera">
                    <label for="tab3">Papelera</label>

                    <div class="tab-panels">

                        <!-- Panel 1 Lista de Productos-->
                        <section id="marzen" class="tab-panel">

                            <!-- Lista de Productos -->
                            <h2 class="reg-login">Productos</h2>

                            <form class="cart-form" action="#" method="get">

                                <table class="shop_table">
                                    <thead>
                                        <tr>
                                            <th class="product-thumbnail"><span class="screen-reader-text"></span></th>
                                            <th class="product-name">Producto</th>
                                            <th class="product-price">Precio</th>
                                            <th class="product-quantity">Editar</th>

                                        </tr>
                                    </thead>

                                    <tbody>
                                        <tr class="cart_item">
                                            <td class="product-cart">
                                                <a href="/productDetail" class="no-lightbox">
                                                    <img src="/images/Under Armour speed stride OS.jpg" class="cart-img"
                                                        alt="">
                                                </a>
                                            </td>
                                            <td class="product-name">
                                                <a href="/productDetail">
                                                    Remera Adidas Training
                                                </a>
                                            </td>

                                            <td class="product-price">
                                                <span class="">$</span>&nbsp;11.900,00</span>
                                            </td>

                                            <td>
                                                <div class="product-edit">
                                                    <a href="/editProduct"><span
                                                            class="fas fa-pencil-alt"></span></a>
                                                    <a href="" class="remove"><span class="far fa-trash-alt"></span></a>

                                                </div>
                                            </td>


                                        </tr>
                                        <tr class="cart_item">
                                            <td class="product-cart">
                                                <a href="/productDetail" class="no-lightbox">
                                                    <img src="/images/Under Armour speed stride OS.jpg" class="cart-img"
                                                        alt="">
                                                </a>
                                            </td>
                                            <td class="product-name">
                                                <a href="/productDetail">
                                                    Remera Adidas Training
                                                </a>
                                            </td>

                                            <td class="product-price">
                                                <span class="">$</span>&nbsp;11.900,00</span>
                                            </td>

                                            <td>
                                                <div class="product-edit">
                                                    <a href="/editProduct"><span
                                                            class="fas fa-pencil-alt"></span></a>
                                                    <a href="" class="remove"><span class="far fa-trash-alt"></span></a>

                                                </div>
                                            </td>


                                        </tr>
                                        <tr class="cart_item">
                                            <td class="product-cart">
                                                <a href="/productDetail" class="no-lightbox">
                                                    <img src="/images/Under Armour speed stride OS.jpg" class="cart-img"
                                                        alt="">
                                                </a>
                                            </td>
                                            <td class="product-name">
                                                <a href="/productDetail">
                                                    Remera Adidas Training
                                                </a>
                                            </td>

                                            <td class="product-price">
                                                <span class="">$</span>&nbsp;11.900,00</span>
                                            </td>

                                            <td>
                                                <div class="product-edit">
                                                    <a href="/editProduct"><span
                                                            class="fas fa-pencil-alt"></span></a>
                                                    <a href="" class="remove"><span class="far fa-trash-alt"></span></a>

                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </form>


                        </section>

                        <!-- Panel 2  Añadir Nuevo Producto-->
                        <section id="rauchbier" class="tab-panel">

                            <!-- Formulario alta de producto -->
                            <h2 class="reg-login">Agregar productos</h2>
                            <form action="#" method="post" class="formulario bg-gris-claro">

                                <label for="nombre">Nombre producto</label>
                                <input type="text" name="nombre" id="nombre" class="border-box">
                                <label for="desc">Descripción</label>
                                <input type="text" name="desc" id="desc" class="border-box">
                                <label for="cantidad">Cantidad</label>
                                <input type="text" name="cantidad" id="cantidad" class="border-box">
                                <label for="preciolista">Precio de lista</label>
                                <input type="number" name="preciolista" id="preciolista" class="border-box">

                                <label for="preciopromo">Precio promoción</label>
                                <input type="number" name="preciopromo" id="preciopromo" class="border-box">
                                <label for="imagenDestacada">Imagen destacada</label>
                                <input type="file" name="imagendestacada" accept=".jpg, .jpeg" class="border-box">
                                <label>Galería</label>
                                <input type="file" name="imagen1" accept=".jpg, .jpeg" class="border-box">
                                <input type="file" name="imagen2" accept=".jpg, .jpeg" class="border-box">
                                <input type="file" name="imagen3" accept=".jpg, .jpeg" class="border-box">
                                <input type="file" name="imagen4" accept=".jpg, .jpeg" class="border-box">
                                <label for="talles">Talles</label>


                                <ul class="caja-talles">
                                    <li class="div-talles">S
                                        <input type="checkbox" name="S" id="s">
                                    </li>
                                    <li class="div-talles">M
                                        <input type="checkbox" name="m" id="m">

                                    </li>
                                    <li class="div-talles">L
                                        <input type="checkbox" name="l" id="l">

                                    </li>
                                    <li class="div-talles">XL
                                        <input type="checkbox" name="xl" id="xl">

                                    </li>
                                </ul>
                                </ul>

                                <label for="colores">Colores</label>
                                <ul class="caja-colores">

                                    <li class="bg-rojo div-colores">
                                        <input type="checkbox" name="rojo" id="rojo">
                                    </li>
                                    <li class="bg-amarillo div-colores">
                                        <input type="checkbox" name="amarillo" id="amarillo">

                                    </li>
                                    <li class="bg-negro div-colores">
                                        <input type="checkbox" name="negro" id="negro">

                                    </li>
                                    <li class="bg-blanco div-colores">
                                        <input type="checkbox" name="blanco" id="blanco">

                                    </li>
                                </ul>
                                </ul>




                                <div class="botones">
                                    <button class="submit" type="submit"><a href="/">Guardar</a></button>
                                    <button class="rest" type="reset">Borrar</button>
                                </div>
                            </form>

                        </section>





                        <!-- Panel 1 Papelera -->
                        <section id="papelera" class="tab-panel">

                            Lista de produductos en la Papelera

                        </section>


                    </div>

                </div>

            </div>

        </div>
        <!-- Fin row section -->


