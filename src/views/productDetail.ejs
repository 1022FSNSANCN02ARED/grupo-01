<!DOCTYPE html>
<html lang="es">
<head>
	<%- include("partials/head") %>
</head>

<body>
	<!-- Encabezado -->
		<%- include("partials/header") %>
	<!-- Fin Encabezado -->


    <section class="u-section-row padding-tb detalle">
      <div class="r-40">
        <img class="img-destacada" src="/images/product/<%= product.image %>" />
        <div class="galeria">
          <img class="img-small" src="/images/product/<%= product.image1 %>" />
          <img class="img-small" src="/images/product/<%= product.image2 %>" />
          <img class="img-small" src="/images/product/<%= product.image3 %>" />
          <img class="img-small" src="/images/product/<%= product.image4 %>" />
        </div>
      </div>

      <div class="r-60 center padding-pr">

        <!-- Nombre del Producto -->
        <h2 class="nombre"><%= product.name %></h2>
        
        <!-- Precios -->
        <p class="descuento"><s><%= product.discount %></s> <strong>$<%= product.price %></strong></p>

        <!-- DescripciÃ³n -->
        <p class=""> <%= product.description %></p>
        <br >
        <!-- Caracteristicas -->
          <h5>Caracteristicas:</h5>
          <div class="table" id="results">
            <div class='theader'>
              <div class='table_header'>Genero</div>
              <div class='table_header'>Marca</div>
              <div class='table_header'>Material</div>
            </div>
            <div class='table_row'>
              <div class='table_small'>
                <div class='table_cell'>Genero</div>
                <div class='table_cell'><%= product.genero %>.</div>
              </div>
              <div class='table_small'>
                <div class='table_cell'>Marca</div>
                <div class='table_cell'><%= product.marca %></div>
              </div>
              <div class='table_small'>
                <div class='table_cell'>Material</div>
                <div class='table_cell'><%= product.material %></div>
              </div>
            </div>
          </div>

        <!-- Seleccionar Talle -->
        <div class="w-100 ">
                    
          <h5>Seleccione el Talle:</h5>

            <ul class="caja-talles">
              <li class="div-talles">S
                  <input type="radio" name="talle" id="s">
              </li>
              <li class="div-talles">M
                  <input type="radio" name="talle" id="m">
              </li>
              <li class="div-talles">L
                  <input type="radio" name="talle" id="l">
              </li>
              <li class="div-talles">XL
                  <input type="radio" name="talle" id="xl">
              </li>
            </ul>

        </div>

        <div class="w-100 ">
          <h5>Cantidad:</h5>
          <div class="contador">
            
            <div class="quantity caja-contador">
              <a href="#" class="negpos">-</a>
              <input type="number"  class="nume" value="1" size="4" placeholder="" inputmode="numeric" />
              <a href="#" class="negpos">+</a>
            </div>
            <a href="/productCart" class="submit" >Agregar al carrito <i class="fas fa-shopping-bag fa-eye"> </i></a>
          </div>
        </div>

      

    </section>
    
  <!-- footer -->
  <%- include("partials/footer") %>

  </body>
</html>
